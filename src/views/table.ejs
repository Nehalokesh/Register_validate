<!DOCTYPE html>
<html>
<head>
  <title>List of Users</title>
  <style>
    table {
      width: 80%;
      margin: 0 auto;
      border-collapse: collapse;
    }
  
    th, td {
      border: 1px solid black;
      padding: 10px;
      text-align: left;
    }
  
    thead {
      background-color: #4CAF50;
    }
  
    h2 {
      text-align: center;
      margin-top: 50px;
    }
  </style>
</head>
<body>
  <h2>List of Employees</h2>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Hobbies</th>
        <th>Gender</th>
      </tr>
    </thead>
    <tbody>
      <% for(let user of users) { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.hobbies.join(', ') %></td>
          <td><%= user.gender %></td>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>
